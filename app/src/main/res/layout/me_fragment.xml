<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="45dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/topPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@mipmap/man"
                android:onClick="changeHeader"
                android:id="@+id/headerPic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_color="@color/blue_normal"
                app:civ_border_width="2dp"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toRightOf="@id/headerPic">
                <EditText
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:id="@+id/setting_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:textSize="30dp" />
                <ImageView
                    android:layout_marginTop="5dp"
                    android:onClick="changeSex"
                    android:clickable="false"
                    android:id="@+id/sexImage"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintLeft_toRightOf="@id/setting_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/boy"/>
                <LinearLayout
                    android:id="@+id/creditPart"
                    app:layout_constraintTop_toBottomOf="@id/setting_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信誉值："/>
                    <TextView
                        android:textSize="20dp"
                        android:id="@+id/creditValueText"
                        android:text="100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:id="@+id/pass"
                    app:layout_constraintTop_toBottomOf="@id/creditPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="密码："/>
                <EditText
                    android:inputType="textPassword"
                    android:visibility="gone"
                    android:id="@+id/oldPasswordText"
                    app:layout_constraintTop_toBottomOf="@id/creditPart"
                    app:layout_constraintLeft_toRightOf="@id/pass"
                    android:layout_width="wrap_content"
                    android:hint="输入原密码..."
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="textPassword"
                    android:visibility="gone"
                    android:id="@+id/newPasswordText"
                    app:layout_constraintTop_toBottomOf="@id/oldPasswordText"
                    app:layout_constraintLeft_toRightOf="@id/pass"
                    android:layout_width="wrap_content"
                    android:hint="输入新密码..."
                    android:layout_height="wrap_content"/>
            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:id="@+id/firLine"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/headerPic"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_normal"/>

            <LinearLayout
                android:id="@+id/middlePart"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/firLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="真实姓名："></TextView>
                    <EditText
                        android:id="@+id/realNameText"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:text="赵米"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学号："></TextView>
                    <EditText
                        android:id="@+id/studentIdText"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:text="12345678"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄："></TextView>
                    <EditText
                        android:id="@+id/ageText"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:text="20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年级："></TextView>
                    <EditText
                        android:textSize="15sp"
                        android:enabled="false"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:id="@+id/gradeText"
                        android:text="16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业："></TextView>
                    <EditText
                        android:textSize="15sp"
                        android:enabled="false"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:id="@+id/majorText"
                        android:text="模特"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱："></TextView>
                    <EditText
                        android:textSize="15sp"
                        android:enabled="false"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:id="@+id/mailText"
                        android:text="163@qq.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号："></TextView>
                    <EditText
                        android:textSize="15sp"
                        android:enabled="false"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:id="@+id/phoneText"
                        android:text="123"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额："></TextView>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/balanceText"
                        android:text="1000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/secLine"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/middlePart"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue_normal"/>

            <TextView
                android:id="@+id/label_text"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/secLine"
                android:text="我的标签: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <GridView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="10dp"
                android:id="@+id/tagsLayout"
                app:layout_constraintTop_toBottomOf="@id/label_text"
                android:clickable="false"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:numColumns="3">

            </GridView>

            <Button
                android:id="@+id/log_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/holo_red_light"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tagsLayout"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>